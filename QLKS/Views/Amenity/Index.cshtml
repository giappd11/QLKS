@model IEnumerable<QLKS.Models.Amenity>


@{
    Layout = "../Shared/_LayoutPage.cshtml";
    ViewBag.Title = "Danh sách trang/thiết bị";
}

<div class="col-md-12">
    <div class="portlet light   ">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-pin font-red"></i>
                <span class="caption-subject font-red sbold uppercase">Thiết bị</span>
            </div>
            <div class ="actions box_button">  
                @Html.ActionLink("Thêm thiết bị", "Create", "Amenity", htmlAttributes: new { @class = "btn" })
            </div> 
        </div>
        <div class="portlet-body">
            
            <table id="dataTables" class="table table-striped table-hover scroll">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.AmenityName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style ="width: 30%">
                            @Html.DisplayFor(modelItem => item.AmenityName)
                        </td>
                        <td  style ="width: 30%">
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td  style ="width: 30%">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td style ="width: 10%; min-width : 200px">
                            @Html.ActionLink("Sửa", "Edit", new { id = item.AmenityID }) |
                            @Html.ActionLink("Xem", "Details", new { id = item.AmenityID }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.AmenityID })
                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>
</div>
