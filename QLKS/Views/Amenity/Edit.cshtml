@model QLKS.Models.Amenity

@{
    Layout = "../Shared/_LayoutPage.cshtml";
    ViewBag.Title = "Edit";
}

<div class="col-md-12">
    <div class="portlet light   ">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-pin font-red"></i>
                <span class="caption-subject font-red sbold uppercase">Sửa thiết bị</span>
            </div>

        </div>

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)   

            @Html.HiddenFor(model => model.AmenityID)
            <div class="form-group">
                <div class="control-label col-md-3">
                    @Html.LabelFor(model => model.AmenityName)
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.AmenityName)
                    @Html.ValidationMessageFor(model => model.AmenityName)
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-3">
                    @Html.LabelFor(model => model.Price)
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Price)
                    @Html.ValidationMessageFor(model => model.Price)
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-3">
                    @Html.LabelFor(model => model.Description)
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>
        
            <div class="box_button">
                @Html.ActionLink("Trở về", "Index")
                <button type="submit" class="btn" value="Sửa">Lưu</button>
            </div>  
        }
    </div>
</div>
