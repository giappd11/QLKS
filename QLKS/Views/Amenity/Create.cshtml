@model QLKS.Models.Amenity

@{
    Layout = "../Shared/_LayoutPage.cshtml";
    ViewBag.Title = "Create";
}

<div class="col-md-12">
    <div class="portlet light   ">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-pin font-red"></i>
                <span class="caption-subject font-red sbold uppercase">Tạo mới thiết bị</span>
            </div>

        </div>
        <div class="portlet-body">

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
     
                <div class="form-group">
                    <div class="control-label col-md-3">
                        @Html.LabelFor(model => model.AmenityName)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.AmenityName)
                        @Html.ValidationMessageFor(model => model.AmenityName)
                    </div>
                </div>
                <div class="form-group">

                    <div class="control-label col-md-3">
                        @Html.LabelFor(model => model.Price)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Price)
                        @Html.ValidationMessageFor(model => model.Price)
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-3">
                        @Html.LabelFor(model => model.Description)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </div>
     

                <div class="box_button">
                    @Html.ActionLink("Trở lại","Index","Amenity",htmlAttributes:new {@class = "btn"})
                    <button type="submit" value="Create">Thêm</button>
                </div>
            }
        </div>
    </div>
</div>
