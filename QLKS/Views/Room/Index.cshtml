@model  QLKS.Models.ViewRoom

@{
    Layout = "../Shared/_LayoutPage.cshtml";
    ViewBag.Title = "Phòng";
}


<div class="col-md-7">
    <div class="portlet light   ">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-pin font-red"></i>
                <span class="caption-subject font-red sbold uppercase">Thông tin chi tiết</span>
            </div>

        </div>
        <div class="portlet-body">
            @Html.Partial("Create", Model.Create)
        </div>
    </div>
</div>
<div class="col-md-5">
    <div class="portlet light  ">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-pin font-red"></i>
                <span class="caption-subject font-red sbold uppercase">Danh sách Loại phòng</span>
            </div>
        </div>
        <div class="portlet-body">
            <table class="scroll">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ListRoomType.FirstOrDefault().RoomTypeName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ListRoomType.FirstOrDefault().Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ListRoomType.FirstOrDefault().Depcriptions)
                        </th>
                    </tr>
                </thead>
                <tbody style="height: 200px;">
                    @foreach (var item in Model.ListRoomType)
                    {
                        <tr>
                            <td style="width: 30%; min-width: 150px;">
                                @Html.DisplayFor(modelItem => item.RoomTypeName)
                            </td>
                            <td style="width: 30%">
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td style="width: 40%">
                                @Html.DisplayFor(modelItem => item.Depcriptions)
                            </td>

                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
<div class="col-md-12">
    <div class="portlet light  ">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-pin font-red"></i>
                <span class="caption-subject font-red sbold uppercase">Danh sách phòng</span>
            </div>
        </div>
        <div class="portlet-body">
            <table id="dataTables" class="table table-striped table-hover scroll">
                <thead>
                    <tr>
                        <th style="width: 10%">
                            @Html.DisplayNameFor(model => model.Create.Floor)
                        </th>
                        <th style="width: 20%">
                            @Html.DisplayNameFor(model => model.Create.Position)
                        </th>
                        <th style="width: 20%">
                            @Html.DisplayNameFor(model => model.Create.RoomType.RoomTypeName)
                        </th>
                        <th style="width: 20%">
                            @Html.DisplayNameFor(model => model.Create.RoomStatus)
                        </th>
                        <th style="width: 20%">
                            @Html.DisplayNameFor(model => model.Create.RoomPhone)
                        </th>
                        <th style="width: 20%"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.List)
                    {
                        <tr>

                            <td style="width: 10%">
                                @Html.DisplayFor(modelItem => item.Floor)
                            </td>
                            <td style="width: 20%">
                                @Html.DisplayFor(modelItem => item.Position)
                            </td>
                            <td style="width: 20%">
                                @Html.DisplayFor(modelItem => item.RoomType.RoomTypeName)
                            </td>
                            <td style="width: 20%">
                                @if (item.RoomStatus == 1)
                                {
                                    <span>Trống</span>
                                }
                                else if (item.RoomStatus == 2)
                                {
                                    <span>Có khách</span>
                                }
                                else if (item.RoomStatus == 3)
                                {
                                    <span>Chờ khách</span>
                                }
                                else if (item.RoomStatus == 4)
                                {
                                    <span>Quá hạn</span>
                                }
                                else if (item.RoomStatus == 5)
                                {
                                    <span>Sửa chữa</span>
                                }
@*Html.DisplayFor(modelItem => item.RoomStatus)*@
                            </td>
                            <td style="width: 20%">
                                @Html.DisplayFor(modelItem => item.RoomPhone)
                            </td>
                            <td style="width: 30%; min-width : 200px">
                                @Html.ActionLink("Sửa", "Edit", new { id = item.RoomNoID }) |
                            @Html.ActionLink("Xem", "Details", new { id = item.RoomNoID }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.RoomNoID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
